<div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
     <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)),pin %><br>
        <div class="panel-body">
          <%= pin.description %><br>
          <%= pin.user.email %>
          <% if user_signed_in? && current_user == pin.user %>
            <%= link_to raw('<span class="glyphicon glyphicon-edit" ></span> Edit'), edit_pin_path(pin) %>
            <%= link_to  pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>Destroy
            <% end %>
           <% end %>
           </div>
         </div>
    <% end %>
</div>
<div class="center"> 
  <%= will_paginate @pins,renderer: BootstrapPagination::Rails%>
</div>
